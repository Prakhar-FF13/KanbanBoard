<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:text="Task Details"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@color/colorThemeBlue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="Title"
            android:textColor="@color/colorThemeLightBlue"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/idETTaskTitle"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text=""
            android:background="@drawable/round_border"
            android:ems="10"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="Description"
            android:textColor="@color/colorThemeLightBlue"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/idETTaskDescription"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text=""
            android:background="@drawable/round_border"
            android:ems="10"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Priority"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorThemeLightBlue"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/idRGTaskPriority"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBLow"
                android:text="Low"
                android:layout_marginVertical="5dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBMedium"
                android:text="Medium"
                android:layout_marginVertical="5dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBHigh"
                android:text="High"
                android:layout_marginVertical="5dp"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Assigned To"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorThemeLightBlue"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/idETTaskAssignee"
            android:layout_weight="1"
            android:text=""
            android:layout_margin="10dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:text="Created On"
            android:textColor="@color/colorThemeLightBlue" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/idETTaskCreatedOn"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text=""
            android:background="@drawable/round_border"
            android:ems="10"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorThemeLightBlue"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/idRGTaskStatus"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBOpen"
                android:text="Open"
                android:layout_marginVertical="5dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBInProgress"
                android:text="InProgress"
                android:layout_marginVertical="5dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBClose"
                android:text="Closed"
                android:layout_marginVertical="5dp"/>
        </RadioGroup>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idBtnUpdateTask"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_bg"
        android:text="Update"
        android:textColor="@color/colorThemeGreen"
        android:layout_gravity="center"/>
</LinearLayout>