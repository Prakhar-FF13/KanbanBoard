<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:text="Add Task"
            android:textColor="@color/colorThemeBlue"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idETTitle"
            android:background="@drawable/round_border"
            android:ems="10"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Title"
            android:padding="10dp"
            android:textColorHint="@color/colorThemeGreen"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idETDescription"
            android:background="@drawable/round_border"
            android:ems="10"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Description"
            android:padding="10dp"
            android:textColorHint="@color/colorThemeGreen"
            android:textSize="20sp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idETAssignee"
            android:background="@drawable/round_border"
            android:ems="10"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Assignee"
            android:padding="10dp"
            android:textColorHint="@color/colorThemeGreen"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Priority"
            android:textColor="@color/colorThemeGreen"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:textSize="20sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/idRGDialog"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/idRBDialogLow"
                android:layout_weight="1"
                android:text="Low"
                android:textColor="@color/colorThemeBlue"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/idRBDialogMedium"
                android:layout_weight="1"
                android:text="Medium"
                android:textColor="@color/colorThemeBlue"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/idRBDialogHigh"
                android:layout_weight="1"
                android:text="High"
                android:textColor="@color/colorThemeBlue"/>

        </RadioGroup>

    </LinearLayout>


</ScrollView>