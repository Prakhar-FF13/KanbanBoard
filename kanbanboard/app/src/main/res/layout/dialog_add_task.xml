<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idETTitle"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Title" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idETDescription"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Description" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idETPriority"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Priority" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idETAssignee"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Assignee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Status"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/idRGDialog"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/idRBDialogOpen"
            android:layout_weight="1"
            android:text="Open"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/idRBDialogInProgress"
            android:layout_weight="1"
            android:text="InProgress"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/idRBDialogClose"
            android:layout_weight="1"
            android:text="Closed"/>

    </RadioGroup>

</LinearLayout>