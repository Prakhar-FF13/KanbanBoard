<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.TaskDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/idTVTaskTitle"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/idTVTaskDescription"
        android:layout_marginHorizontal="10dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:text="Priority:"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/idTVTaskPriority"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Assigned To"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/idTVTaskAssignee"
            android:layout_weight="1"
            android:text=""
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Status:"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/idRG"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBOpen"
                android:text="Open"
                android:layout_marginVertical="5dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBInProgress"
                android:text="InProgress"
                android:layout_marginVertical="5dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idRBClose"
                android:text="Closed"
                android:layout_marginVertical="5dp"/>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>